                <li>
                  <%= link_to about_path, class: 'nav-link text-white' do %>
                  <i class="fas fa-sign-out-alt"></i><%= "  " %><span>f</span>avorite ~お気に入り~
                  <% end %>
                <li>
                  <%= link_to destroy_customer_session_path, class: 'nav-link text-white', method: :delete do %>
                  <i class="fas fa-sign-out-alt"></i><%= "  " %><span>L</span>ogOut ~ログアウト~
                </li>
              <% end %>
              </div>

　　　　　　　<!--管理者ページ-->
              <% elsif admin_signed_in? %>
              <div class="admin">
                <li>
                  <%= link_to admin_root_path, class: 'nav-link text-white' do %>
                  <i class="fas fa-rss"></i><%= "  " %><span>M</span>essage List
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class: 'nav-link text-white' do %>
                  <i class="fas fa-users"></i><%= "  " %><span>C</span>ustomer
