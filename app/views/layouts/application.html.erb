                  <i class="fas fa-users"></i><%= "  " %><span>M</span>ypage ~マイページ~
                  <% end %>
                </li>
                <li>
                  <%= link_to movies_search_path, class: 'nav-link text-white' do %>
                  <i class="fas fa-home"></i><%= "  " %><span>S</span>earch ~検索~
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class: 'nav-link text-white' do %>
                  <i class="fas fa-sign-out-alt"></i><%= "  " %><span>L</span>OG ~鑑賞した映画~
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class: 'nav-link text-white' do %>
                  <i class="fas fa-sign-out-alt"></i><%= "  " %><span>C</span>omment ~感想コメント~
                  <% end %>
