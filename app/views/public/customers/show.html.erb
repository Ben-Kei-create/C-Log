    <div class="row justify-content-md-center mt-4">
      <h4><%= image_tag @customer.get_profile_image(100,100) %></h4>
    </div>
    <div class="row justify-content-md-center">
      <h4><%= @customer.name %>さん</h4>
    </div>

    <div class="row mt-5">
      <div class="col-1"></div>
      <div class="col-5">
      <h2>Profile<%= ' ' %><%= link_to "Profileを変更", edit_customer_path(current_customer), class: 'btn btn-dark btn-md' %></h2>
        <table class="table table-striped table-dark text-center">
          <thead>
            <tr>
              <th style="width: 40%"><h4>氏名</h4></th>
              <th style="width: 60%"><h4><%= @customer.name %></h4></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><h4>フリガナ</h4></th>
              <th><h4><%= @customer.name_kana %></h4></th>
            </tr>
            <tr>
              <th><h4>郵便番号</h4></th>
              <th><h4><%= @customer.postal_code %></h4></th>
            </tr>
            <tr>
              <th><h4>住所</h4></th>
              <th><h4><%= @customer.address %></h4></th>
            </tr>
            <tr>
              <th><h4>電話番号</h4></th>
              <th><h4><%= @customer.telephone_number %></h4></th>
            </tr>
            <tr>
              <th><h4>メールアドレス</h4></th>
              <th><h4><%= @customer.email %></h4></th>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-5">
      <h2>Impression<%= ' ' %><%= link_to "Impressionを編集", edit_impression_path(current_customer), class: 'btn btn-dark btn-md' %></h2>
        <table class="table table-striped table-dark text-center">
          <thead>
            <tr>
              <th style="width: 40%"><h4>一番好きな映画</h4></th>
              <th style="width: 60%"><h4><%= @impression ? @impression.best_movie : "投稿はまだありません" %></h4></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><h4>今オススメする映画<h4></th>
              <th><h4><%= @customer.email %><h4></th>
            </tr>
          </tbody>
        </table>

        <h2>Favorite<%= ' ' %><%= link_to "Favoriteを編集", edit_customer_path(current_customer), class: 'btn btn-dark btn-md' %></h2>
        <table class="table table-striped table-dark text-center">
          <thead>
            <tr>
              <th style="width: 40%"><h4>鑑賞した作品数</h4></th>
              <th style="width: 60%"><h4><%= @customer.email %>回</h4></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th><h4>いいねした作品数<h4></th>
              <th><h4><%= @customer.email %>回<h4></th>
            </tr>
          </tbody>
        </table>

        <h2>Review<%= ' ' %><%= link_to "自分のReviewをみる", edit_customer_path(current_customer), class: 'btn btn-dark btn-md' %></h2>
      </div>
    </div>


