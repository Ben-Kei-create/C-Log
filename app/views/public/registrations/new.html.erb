<%= flash[:notice] %>
<div class="container">
  <div class="row mt-4 bg-light">
    <h3><strong>新規会員登録</strong></h3>
  </div>
  <div class="row mt-4">
      <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
      <%#= render "public/shared/error_messages", resource: resource %>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th>名前</th>
          <th><%= f.text_field :name, autofocus: true, placeholder: "令和道子", autocomplete: "name" %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>フリガナ</th>
          <th><%= f.text_field :name_kana, autofocus: true, placeholder: "レイワミチコ", autocomplete: "name_kana" %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= f.text_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %></th>
        </tr>
        <tr>
          <th>郵便番号（ハイフンなし）</th>
          <th><%= f.text_field :postal_code, placeholder: "1234567", autocomplete: "postal_code" %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= f.text_field :address, size: "30*30", placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address" %></th>
        </tr>
        <tr>
          <th>電話番号（ハイフンなし）</th>
          <th><%= f.telephone_field :telephone_number, placeholder: "08012345678", autocomplete: "telephone_number" %></th>
        </tr>
        <tr>
          <th>パスワード（６文字以上）</th>
          <th><%= f.password_field :password, autocomplete: "new-password" %></th>
        </tr>
        <tr>
          <th>パスワード（確認用）</th>
          <th><%= f.password_field :password_confirmation, autocomplete: "new-password" %></th>
        </tr>
        <tr>
          <%= f.submit "新規登録", class: "btn btn-success" %>
          <%= render "public/shared/links" %>
        </tr>
        <tr>
          <th><h3 class="bg-light"><strong>既に登録済みの方</strong></h3><br><%= render "public/shared/links" %>からログインしてください。</th>
          <th colspan="2"></th>
        </tr>
      </tbody>
    </table>
  </div>
  <% end %>
</div>