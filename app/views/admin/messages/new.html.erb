      <div class="row mt-5 justify-content-md-center">
        <div class="col-1"></div>
        <div class="col-3">
        <%= link_to "◀︎一覧へ戻る", admin_root_path, class: "btn badge-light btn-md" %>
        </div>
        <div class="col-4"></div>
      </div>
      <div class="row mt-5">
        <div class="col-3"></div>
          <div class="col-3">
            <%= form_with model: @message, url: admin_messages_path, method: :post do |f| %>
            <h4>タイトル</h4><%= f.text_field :title, placeholder: "管理者より連絡", size: "40x20" %>
            <h4>本文<%= ' ' %></h4><%= f.text_area :information, placeholder: "新しい映画コンテンツが増えました！", size: "40x10" %><br>
            <%= f.submit '投稿', class: "btn btn-dark mb-3 btn-md" %>
            <% end %>
          </div>
        <div class="col-4 mt-3">
          <%= image_tag 'message_new.jpg', size: "450x450" %>
        </div>
      </div>